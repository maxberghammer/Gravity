<UserControl x:Class="Gravity.Wpf.Controls.RotationGizmo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="120"
             Width="120"
             Height="120"
             x:ClassModifier="internal">
	<Canvas>
		<!-- Background circle -->
		<Ellipse Width="100"
		         Height="100"
		         Canvas.Left="10"
		         Canvas.Top="10"
		         Stroke="Gray"
		         StrokeThickness="1"
		         Opacity="0.3"/>
		<!-- X axis (red) -->
		<Line x:Name="_gizmoAxisX"
		      Stroke="Red"
		      StrokeThickness="2"
		      X1="60"
		      Y1="60"
		      X2="110"
		      Y2="60"/>
		<TextBlock x:Name="_gizmoLabelX"
		           Text="X"
		           Foreground="Red"
		           FontWeight="Bold"
		           Canvas.Left="112"
		           Canvas.Top="52"/>
		<!-- Y axis (green) -->
		<Line x:Name="_gizmoAxisY"
		      Stroke="LimeGreen"
		      StrokeThickness="2"
		      X1="60"
		      Y1="60"
		      X2="60"
		      Y2="10"/>
		<TextBlock x:Name="_gizmoLabelY"
		           Text="Y"
		           Foreground="LimeGreen"
		           FontWeight="Bold"
		           Canvas.Left="52"
		           Canvas.Top="-5"/>
		<!-- Z axis (blue) -->
		<Line x:Name="_gizmoAxisZ"
		      Stroke="DodgerBlue"
		      StrokeThickness="2"
		      X1="60"
		      Y1="60"
		      X2="95"
		      Y2="25"/>
		<TextBlock x:Name="_gizmoLabelZ"
		           Text="Z"
		           Foreground="DodgerBlue"
		           FontWeight="Bold"
		           Canvas.Left="97"
		           Canvas.Top="10"/>
		<!-- Angle display -->
		<TextBlock x:Name="_gizmoAngleText"
		           Foreground="White"
		           FontSize="10"
		           Canvas.Left="10"
		           Canvas.Top="115"/>
	</Canvas>
</UserControl>
